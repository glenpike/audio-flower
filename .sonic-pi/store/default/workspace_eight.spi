# Steve Reich's Piano Phase

piano_phase_notes = (ring :E4, :Fs4, :B4, :Cs5, :D5, :Fs4, :E4, :Cs5, :B4, :Fs4, :D5, :Cs5)

define :piano_phase do |speed|
  use_synth :piano
  48.times do
    play piano_phase_notes.tick, sustain_level: 0.9, release: 1, amp: 0.7
    sleep speed
  end
end



with_fx :reverb, room: 1 do
  live_loop :slow_piano do
    piano_phase 0.3
  end
  live_loop :faster_piano do
    piano_phase 0.295
  end
end

